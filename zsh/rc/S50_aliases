
#{{{ Shell Conveniences
source ~/.aliases
alias ez='vim ~/.zshrc; source ~/.zshrc'
alias mk=popd
alias ls='pwd; ls --color'

#}}}

alias attd="sudo aptitude"

#{{{ Misc.

alias mmv='noglob zmv -W'

# copy with a progress bar.
alias cpv="rsync -poghb --backup-dir=/tmp/rsync -e /dev/null --progress --"

#}}}

#{{{ Globals...

alias -g G="| grep"
alias -g L="| less"

#}}}

#{{{ Suffixes...

if [[ -x `which abiword` ]]; then
  alias -s doc=abiword
fi
if [[ -x `which ooimpress` ]]; then
  alias -s ppt='ooimpress &> /dev/null '
fi

if [[ $DISPLAY = '' ]] then
  alias -s txt=vi
else
  alias -s txt=gvim
fi

#}}}

alias realias='vi ~/.aliases; source ~/.aliases'

alias git='noglob wrap-git'
compdef wrap-git=git
alias gitk='noglob g_tk'
function g_tk() { /usr/bin/env 'gitk' "$@" & }
alias grr='noglob g_tk ^origin/release HEAD'
alias gosu='git submodule update --init'
alias gre='git rebase --root --onto origin/release -i --autosquash'

# vim: ft=zsh foldmethod=marker


_force_rehash() {
  (( CURRENT == 1 )) && rehash
  return 1  # Because we didn't really complete anything
}

edit-command-output() {
 BUFFER=$(eval $BUFFER)
 CURSOR=0
}
zle -N edit-command-output

function calc() {
   bc <<< "scale=5; $1";
}

function sl_table_moniker() {
   perl -MDBIx::Class::Schema::Loader::Base -MDBIx::Class::Schema::Loader::Table -le "my \$sl = DBIx::Class::Schema::Loader::Base->new(naming => 'v$1', use_namespaces => 1); print \$sl->_default_table2moniker(DBIx::Class::Schema::Loader::Table->new(name => '$2', loader => \$sl))"
}

function _mkdir { if [[ ! -d $1 ]]; then mkdir -p $1; fi }

function tch { _mkdir "${1:h}"; touch "$1" }

function _tmux_session { tmux -2 new-session -s "$1" || tmux -2 attach-session -t "$1" }

function tmwork { _tmux_session work }

function tmmess { _tmux_session messaging }

function fru { MYPERL_CONFIG="$HOME/.fruperl" myperl "$@" }
function frue { MYPERL_CONFIG="$HOME/.fruperl" myperl -E "$@" }


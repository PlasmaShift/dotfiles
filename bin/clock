#!/usr/bin/env perl

use 5.14.0;
use warnings;

use charnames ':full';

binmode STDOUT, ':encoding(UTF-8)';

my (undef, $min, $hour) = localtime;

$hour = $hour % 12;

my @hours = map uc, qw(
   twelve
   one
   two
   three
   four
   five
   six
   seven
   eight
   nine
   ten
   eleven
);

my $time = "CLOCK FACE ";
if ($min < 15) {
   $time .= "$hours[$hour] OCLOCK";
} elsif ($min >= 15 && $min <= 45) {
   $time .= "$hours[$hour]-THIRTY"
} else {
   $hour += 1;
   $hour = $hour % 12;

   $time .= "$hours[$hour] OCLOCK";
}

say charnames::string_vianame($time);

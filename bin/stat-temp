#!/usr/bin/perl

use strict;
use warnings;
use utf8;
use v5.14;

binmode(STDOUT, ":encoding(UTF-8)");

# XXX check errors on open, seek, read, etc?
open my $fh, '<', "/sys/class/thermal/thermal_zone0/temp";
while (1) {
   my $temp = <$fh>;
   seek $fh, 0, 0;
   $temp /= 1000.0;

   print "^fg(#C4A000)$tempÂ°C^p(15)^fg()\n";
   sleep 1
}

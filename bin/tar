#!/usr/bin/env perl

use strict;
use warnings;

use Path::Class 'file';

my $dir = file(__FILE__)->parent;

local $ENV{PATH} = join ':',
   grep { $_ ne $dir }
   split qr/\:/,
   $ENV{PATH};

exec 'tar' unless @ARGV;

my ($command, @args) = @ARGV;

if ($command =~ /-xv([jz])f/) {
   print "frew, it's 2012, the dash is optional and the $1 is automatic\n";
   exit 1;
} else {
   exec 'tar', $command, @args;
}

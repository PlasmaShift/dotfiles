#!/bin/dash

host=$1
shift

if [ "$#" -eq 0 ]; then
   ssh $host <<SH
   mkdir -p \$HOME/code
   if [ ! -d \$HOME/code/dotfiles ]; then
      git clone --quiet -j"\$(cat /proc/cpuinfo | grep '^processor' | wc -l)" --recursive git://github.com/frioux/dotfiles \$HOME/code/dotfiles
      cd \$HOME/code/dotfiles
      ./install.sh
   fi
SH
fi

exec ssh $host "$@"

# vim: ft=sh

#!/bin/zsh

notmuch new > /dev/null
echo "sms errors      : $(notmuch count 'to:sms-errors@mitsi.com')"

now="$(date +%s)"
echo "sms errors today: $(notmuch count $(expr $now - 24 '*' 60 '*' 60)..$now 'to:sms-errors@mitsi.com')"
echo "sms errors  hour: $(notmuch count $(expr $now - 60 '*' 60)..$now 'to:sms-errors@mitsi.com')"
echo
echo "      prtg      : $(notmuch count 'from:prtg@mitsi.com')"
echo "      prtg today: $(notmuch count $(expr $now - 24 '*' 60 '*' 60)..$now 'from:prtg@mitsi.com')"
echo "      prtg  hour: $(notmuch count $(expr $now - 60 '*' 60)..$now 'from:prtg@mitsi.com')"
echo
echo " ci errors today: $(notmuch count $(expr $now - 24 '*' 60 '*' 60)..$now 'Build failed in Jenkins')"
echo " ci errors  hour: $(notmuch count $(expr $now - 60 '*' 60)..$now 'Build failed in Jenkins')"
echo
echo " mitsilist today: $(notmuch count $(expr $now - 24 '*' 60 '*' 60)..$now 'to:mitsi@googlegroups.com')"
echo " mitsilist  hour: $(notmuch count $(expr $now - 60 '*' 60)..$now 'to:mitsi@googlegroups.com')"

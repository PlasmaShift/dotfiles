#!/usr/bin/env perl

use strict;
use warnings;

die 'changes in working directory!' if `git status -s`;

chomp(my $msg = qx(git log --pretty=%s -1));
qx(git reset HEAD^);

my %changed_files = map { m/(..)\s+(.+)/; ($2, $1) }
   split /\0/,
   qx(git status -z);

for (keys %changed_files) {
   my $t = $changed_files{$_};

   if ($t eq '??') {
      system(qw(git add), $_);
      system(qw(git commit -m), "$msg [Added $_]");
   } elsif ($t eq ' M') {
      system(qw(git add), $_);
      system(qw(git commit -m), "$msg [Modified $_]");
   } elsif ($t eq ' D') {
      system(qw(git rm), $_);
      system(qw(git commit -m), "$msg [Deleted $_]");
   }
}
